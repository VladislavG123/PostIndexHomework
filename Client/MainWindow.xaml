<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel Width="200" Height="80">
            <Label Height="25" Margin="1">Введите почтовый индекс</Label>
            <TextBox x:Name="postIndexTextBox" Height="25" Margin="1"></TextBox>
            <Button Height="25" Margin="1" Click="ButtonClick">Найти</Button>
        </StackPanel>

        <TextBox x:Name="dataTextBox" Grid.Row="1" Margin="10" IsReadOnly="True"></TextBox>
        
        <Canvas Grid.Row="3" Background="Black"></Canvas>
        
    </Grid>
</Window>
